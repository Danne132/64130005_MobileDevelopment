            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentStyle"
            android:text="Areader ráº¥t vui vá»›i sá»± cÃ³ máº·t cá»§a báº¡n, hÃ£y Ä‘Äƒng nháº­p láº¡i tÃ i khoáº£n cá»§a mÃ¬nh nhÃ©!"
            app:layout_constraintTop_toBottomOf="@+id/titleSignIn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/introSignIn"
            android:layout_marginTop="20dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            android:background="@drawable/input_border"
            android:paddingHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/envelope" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle"
                    android:textColorHint="@color/content_color"
                    android:hint="Email"
                    />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputPassLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/inputEmailLayout"
            android:layout_marginTop="20dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            android:background="@drawable/input_border"
            android:paddingHorizontal="20dp"

            >
            <LinearLayout
