<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/background_radient">

            <!-- Số thứ nhất -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số thứ nhất"
                android:textColor="#005f7f"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtSoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#005f7f"
                android:hint="Nhập số thứ nhất"
                android:textColor="#005f7f"
                android:textColorHint="#B0BEC5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Số thứ hai -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số thứ hai"
                android:textColor="#005f7f"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtSoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:hint="Nhập số"
                android:textColor="#005f7f"
                android:textColorHint="#B0BEC5"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Các nút toán tử -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCong"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_rounded"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTru"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_rounded"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNhan"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_rounded"
                    android:text="x"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChia"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_rounded"
                    android:text="/"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Kết quả -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Kết quả"
                android:textColor="#005f7f"
                android:textSize="18sp" />

        <EditText
            android:id="@+id/txtKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:editable="false"
            android:hint="Kết quả"
            android:textColor="#005f7f"
            android:textColorHint="#B0BEC5"
            android:textSize="18sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTrangChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:padding="10dp"
                android:text="Về trang chủ"
                android:textColor="#FFFFFF"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="16dp"
                android:onClick="viewTrangChu"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>