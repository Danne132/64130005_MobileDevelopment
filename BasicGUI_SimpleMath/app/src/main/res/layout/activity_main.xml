<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:padding="16dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="MÁY TÍNH CƠ BẢN"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <!-- Số thứ nhất -->
        <TextView
            android:id="@+id/soALable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:text="Số thứ nhất"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/soAInput"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/soALable"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#FFFFFF"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtSoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="104dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Số thứ hai -->
        <TextView
            android:id="@+id/soBLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtSoA"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:text="Số thứ hai"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtSoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="104dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Các nút toán tử -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCong"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cong" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTru"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tru" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNhan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_nhan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_chia" />
        </LinearLayout>

        <!-- Kết quả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kết quả"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtKQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="104dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>