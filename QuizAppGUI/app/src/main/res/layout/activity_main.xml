<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="128dp"
            android:src="@drawable/quiz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/cppChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/language_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cpp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C++"
                android:textAlignment="center"
                android:textColor="#5B1CAE"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/javaChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/language_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@+id/cppChoose">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/java" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Java"
                android:textColor="#5B1CAE"
                android:textSize="35sp"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pythonChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/language_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@+id/javaChoose">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/python" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Python"
                android:textColor="#5B1CAE"
                android:textSize="35sp"
                android:textAlignment="center"
                />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>